<!DOCTYPE html>
<html>
<head>
  <$- include('../partials/head') $>
</head>
<body>
  <$- include('../partials/header', {subHeading: 'Welcome'}) $>
  <main>

    <div class="welcomeContainer">
      <div id="left">
        <img class="landingImage" src="images/urban.jpg"/>
        <h3>Top Spot: URBAN</h3>
      </div>
      <div id="center">
        <img class="landingImage" src="images/bench-nature.jpg" />
        <h3>Top Spot: NATURE</h3>
      </div>
      <div id="right">
        <img class="landingImage" src="images/family.jpg" />
        <h3>Top Spot: FAMILY</h3>
      </div>
   </div>

   <div class="container-fluid box">

     <div id="userName">
       <p>Top Spots</p>
     </div>

     <div class="row indexTemplate">
       <$ spots.forEach(function (spot) { $>

         <div class="col-md-4 indexSpotContainer box-shadow--4dp">

           <div>
             <img class="maxImageWidth box-shadow--2dp" src=<$= spot.image_url $>>
           </div>

           <p id="title"> <$= spot.title $> </p>

           <span> Tags:
             <$ var tagString = "" $>
             <$ spot.tags.forEach(function (tag) { $>
             <$ tagString += (tag.tag_name + ", ");$>
             <$ }); $>
             <$= tagString.replace(/,\s*$/, ""); $>
           </span>
           <br>

           <span> Rating: <$= spot.rating $> </span>
           <br>

           <a class="btn btn-default box-shadow--2dp" id="containerButton" href="spots/<$= spot._id $>" role="button">Detail</a>

         </div>

       <$ }); $>
     </div>

   </div>

  </main>
  <$- include('../partials/scripts') $>
</body>
</html>
